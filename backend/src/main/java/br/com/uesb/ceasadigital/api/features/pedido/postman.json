        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/pedidos/admin?page=0&size=20&direction=desc&sortBy=atualizadoEm",
          "host": ["{{base_url}}"],
          "path": ["pedidos", "admin"],
          "query": [
            {
              "key": "page",
              "value": "0"
