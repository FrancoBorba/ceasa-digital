# ===================================================================
# Este arquivo serve como um template para os outros desenvolvedores.
# Cada um deve criar seu próprio 'application.yml' a partir deste.
# ===================================================================

# Configurações principais da aplicação
spring:
  config:
    import: 
      - optional:file:../.env[.properties]
  application:
    name: ceasa-digital-api
  profiles:
    active: ${SPRING_PROFILES_ACTIVE:dev}
  jpa:
    open-in-view: false

security:
  client-id: ${OAUTH2_CLIENT_ID:myclientid}
  client-secret: ${OAUTH2_CLIENT_SECRET:myclientsecret}

  jwt:
    duration: ${OAUTH2_JWT_DURATION:86400}

cors:
  origins: ${OAUTH2_CORS_ORIGINS:http://localhost:3000,http://localhost:5173}