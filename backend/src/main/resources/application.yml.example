# ===================================================================
# Este arquivo serve como um template para os outros desenvolvedores.
# Cada um deve criar seu próprio 'application.yml' a partir deste.
# ===================================================================

# Configurações do Servidor
server:
  port: 8080 # Porta onde a API vai rodar

# Configurações do Spring
spring:
  # Configuração do DataSource (Conexão com o Banco de Dados)
  datasource:
    url: jdbc:postgresql://db:5432/ceasadigital_db 
    username: <SEU_USUARIO_DO_POSTGRES>
    password: <SUA_SENHA_DO_POSTGRES>

  # Configuração do JPA (Java Persistence API)
  jpa:
    hibernate:
      ddl-auto: validate # Deixa o Flyway cuidar do banco
    show-sql: true
    properties:
      hibernate:
        format_sql: true

  # Configuração do Flyway
  flyway:
    baseline-on-migrate: true
    locations: classpath:db/migration